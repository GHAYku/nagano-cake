<%= @order.last_name + @order.first_name %>
<%= @order.created_at.strftime("%Y/%m/%d") %>
<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>
<%= @order.payment_method %>
<%= form_with model: @order, url: admin_order_path, local: true do |f| %>
  <%= f.select :order_status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
  <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
<% end %>


<% @order_details.each do |order_detail| %>

 <%= order_detail.name%>
 <%= order_detail.price %>
 <%= order_detail.amount %>
<%= form_with model: order_detail, url: admin_order_detail_path, local: true, do |f| %>
  <%= f.select :making_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"],["製作中","製作中"],["製作完了","製作完了"]], class: "form-control" %>
  <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
<% end %>

 <%= order_detail.price.sum(price) %>
 <%= @order.shipping_cost %>
 <%= order_detail.price.sum(price) + @order.shipping_cost %>
