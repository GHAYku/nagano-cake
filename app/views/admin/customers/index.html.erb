<h3 class="offset-2 text title-text">会員一覧</h3>
<div class="container">
 <div class="row mb-4">
  <div class="col-12">
    <div class="row">
   <div class="col-12 mx-auto">
      <table class="table table-hover">
       <thead>
        <tr class="table-active text">
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @customers.each do |customers| %>
        <tr class="light-text">
         <td><%= customers.id %></td>
         <td class="text">
          <%= link_to admin_customer_path(customers.id) do%>
           <%= customers.last_name + customers.first_name %>
          <% end %>
         </td>
         <td><%= customers.email %></td>
         <td>
           <% if customers.is_active == true %>
            <span class="text-success text">有効</span>
           <% else customers.is_active == false %>
            <span>退会</span>
           <% end %>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
   <div class="mx-auto text">
    <%= paginate  @customers %>
   </div>
  </div>
</div>
</div>