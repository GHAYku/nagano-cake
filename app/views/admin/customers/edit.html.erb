 <div class="container">
  <div class="row mb-5">
    <h2 class="my-4 text title-sub-text">
     <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
    </h2>
   <div class="col-12">
    <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
   <table class="table table-borderless">
       <tr>
        <th class="w-25 text">会員ID</th>
         <td><%= @customer.id%></td>
       </tr>
       <tr>
        <th class="text">氏名</th>
         <td><%= f.text_field :last_name %></td>
         <td><%= f.text_field :first_name %></td>
       </tr>
       <tr>
        <th class="text">フリガナ</th>
         <td><%= f.text_field :last_name_kana %></td>
         <td><%= f.text_field :first_name_kana %></td>
       </tr>
       <tr>
        <th class="text">郵便番号</th>
         <td><%= f.text_field :postal_code %></td>
       </tr>
       <tr>
        <th class="text">住所</th>
         <td><%= f.text_area :address %></td>
       </tr>
       <tr>
        <th class="text">電話番号</th>
         <td><%= f.text_field :telephone_number %></td>
       </tr>
       <tr>
        <th class="text">メールアドレス</th>
         <td><%= f.text_field :email %></td>
       </tr>
       <tr>
        <th class="text">会員ステータス</th>
         <td><%= f.select :is_deleted ,[['有効',true],['退会',false]] %></td>
       </tr>
       <tr>
          <th></th>
           <td class="btn btn-success mr-5 col-2">
            <%= f.submit '変更を保存' %>
           </td>
        </tr>
     <% end %>
    </table>
   </div>
  </div>
</div>



