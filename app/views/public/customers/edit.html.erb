<%= form_with model: @customer, url: customers_path, local:true do |f| %>
<div class="container">
 <div class="row">
  <div class="col-10 mx-auto">
  <h2 class="my-5 text title-text">会員情報編集</h2>

   <div class="form-group row">
    <div class="col-2 text">
     <%= f.label "名前" %>
    </div>
    <div class="offset-1 col-3 text">
     <%= f.text_field :last_name,class: "w-100" %>
    </div>
    <div class="col-3 text">
     <%= f.text_field :first_name,class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
    <div class="col-2 text">
     <%= f.label :last_name_kana, "フリガナ" %>
    </div>
    <div class="offset-1 col-3 text">
     <%= f.text_field :last_name_kana,class: "w-100" %>
    </div>
    <div class="col-3 text">
     <%= f.text_field :first_name_kana,class: "w-100" %>
    </div>
  </div>

        <div class="form-group row">
          <div class="col-3 text">
            <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
          </div>
          <div class="col-3 text">
            <%= f.text_field :post_code, class: "w-100" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2 text">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-1">
          </div>
          <div class="col-7 text">
            <%= f.text_field :address,class: "w-100" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3 text">
            <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
          </div>
          <div class="col-3 text">
            <%= f.text_field :phone_number,class: "w-100" %>
          </div>
        </div>
<div class="form-group row">
          <div class="col-2 text">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-1 text">
          </div>
          <div class="col-3 text">
            <%= f.email_field :email,class: "w-100" %>
          </div>
        </div>

        <%= f.submit "変更を保存", class: "btn btn-success offset-lg-2" %>
<% end %>

 <%= link_to "退会する", class: "btn btn-dangar offset-lg-2" %>
