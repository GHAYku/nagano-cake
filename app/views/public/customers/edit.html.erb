<%= render 'layouts/error', model: @customer %>
<div class="container">
 <div class="row">
  <div class="col-12 mx-auto">
  <h2 class="my-5 title-text">会員情報編集</h2>
  <%= form_with model: @customer, url: customers_path, local:true do |f| %>
   <div class="form-group row">
    <div class="col-2">
     <%= f.label "名前" %>
    </div>
    <div class="offset-1 col-3">
     <%= f.text_field :last_name,class: "w-100" %>
    </div>
    <div class="col-3">
     <%= f.text_field :first_name,class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
    <div class="col-2">
     <%= f.label :last_name_kana, "フリガナ" %>
    </div>
    <div class="offset-1 col-3">
     <%= f.text_field :last_name_kana,class: "w-100" %>
    </div>
    <div class="col-3">
     <%= f.text_field :first_name_kana,class: "w-100" %>
    </div>
  </div>
  <div class="form-group row">
   <div class="col-3">
    <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
   </div>
   <div class="col-3">
    <%= f.text_field :post_code, class: "w-100" %>
   </div>
  </div>

  <div class="form-group row">
   <div class="col-2">
    <%= f.label :address, "住所" %>
   </div>
   <div class="col-1">
   </div>
   <div class="col-7">
    <%= f.text_field :address,class: "w-100" %>
   </div>
  </div>

  <div class="form-group row">
   <div class="col-3">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
   </div>
   <div class="col-3">
    <%= f.text_field :phone_number,class: "w-100" %>
   </div>
  </div>
<div class="form-group row">
 <div class="col-2">
  <%= f.label :email, "メールアドレス" %>
 </div>
 <div class="col-1">
 </div>
 <div class="col-3">
  <%= f.email_field :email,class: "w-100" %>
 </div>
</div>
<div class="row offset-1">
 <%= f.submit "編集内容を保存", class: "btn btn-success offset-lg-2" %>
 <%= link_to "退会する", secession_customers_path,class: "btn btn-danger ml-5" %>
</div>
<% end %>


