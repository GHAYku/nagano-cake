<div class="container">
  <div class="col-10 mx-auto">
    <div class="row mb-4">
      <div class="col-md-12">
        <h3 class="my-5 title-text">マイページ</h3>
         <div class="row mb-3">
          <div class="col-md-2">
            <h5 class="font-weight-bold m-2">登録情報</h5>
          </div>
          <div class="col-md-2">
            <%= link_to "編集する", edit_customers_path, class: "btn btn-success w-100" %>
          </div>
        </div>
        <table class="table table-bordered table-hover">
          <tr>
            <th class="w-25">氏名</th>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <h5 class="font-weight-bold m-2">配送先</h5>
      </div>
      <div class="col-md-3">
        <%= link_to "一覧をみる", addresses_path, class: "btn btn-primary w-75" %>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-md-2">
        <h5 class="font-weight-bold m-2">注文履歴</h5>
      </div>
      <div class="col-md-3">
        <%= link_to "一覧をみる", orders_path, class: "btn btn-primary w-75" %>
      </div>
    </div>
  </div>
</div>
