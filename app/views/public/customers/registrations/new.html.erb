<%= render 'layouts/error', model: @customer %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">
 <div class="row">
  <div class="col-10 mx-auto">
  <h2 class="my-5 title-text">新規会員登録</h2>
   <div class="form-group row">
    <div class="col-2">
     <%= f.label "名前" %>
    </div>
    <div class="col-1">
     <span>(姓)</span>
    </div>
    <div class="col-3">
     <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "w-100" %>
    </div>
    <div class="col-1">
     <span>(名)</span>
    </div>
    <div class="col-3">
     <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "w-100" %>
    </div>
   </div>
   <div class="form-group row">
    <div class="col-2">
     <%= f.label :last_name_kana, "フリガナ" %>
    </div>
    <div class="col-1">
     <span>(セイ)</span>
    </div>
    <div class="col-3">
     <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "w-100" %>
    </div>
    <div class="col-1">
     <span>(メイ)</span>
    </div>
    <div class="col-3">
     <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
     <div class="col-2">
      <%= f.label :email, "メールアドレス" %>
     </div>
     <div class="col-1">
    </div>
    <div class="col-3">
     <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
    <div class="col-3">
     <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
    </div>
    <div class="col-3">
     <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
    <div class="col-2">
     <%= f.label :address, "住所" %>
    </div>
    <div class="col-1">
    </div>
    <div class="col-7">
     <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %>
    </div>
   </div>

   <div class="form-group row">
    <div class="col-3">
     <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
    </div>
    <div class="col-3">
     <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", class: "w-100" %>
    </div>
   </div>

    <div class="form-group row">
     <div class="col-3">
       <%= f.label :password, "パスワード（６文字以上）" %>
     </div>
     <div class="col-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
     </div>
    </div>

    <div class="form-group row">
     <div class="col-3">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>
     </div>
     <div class='col-3'>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
     </div>
    </div>

    <div class="form-group row">
     <div class="col-3">
     </div>
     <div class="col-3">
      <%= f.submit "新規登録", class: "btn btn-success w-100" %>
     </div>
    </div>
     <h11 class=" mb-3 title-text">すでに登録済の方</h11>
     <div class="offset-1 mb-4 mt-3">
      <%= link_to " こちら", new_customer_session_path%>からログインしてください。
     </div>
     <% end %>
  </div>
 </div>
</div>





