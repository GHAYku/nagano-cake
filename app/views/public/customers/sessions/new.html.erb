<%= render 'layouts/error', model: @customer %>
<div class="container">
 <div class="row mb-5">
  <div class="col-10 mx-auto">
   <h2 class="offset-1 my-5 title-text">ログイン</h2>
   <h11 class="offset-2 mb-3 title-text">会員の方はこちらからログイン</h11>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mt-4 form-group row justify-content-center ml-1">
    <%= f.label :email, "メールアドレス" %><br/>
   <div class="col-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>
  </div>

  <div class="form-group row justify-content-center ml-4">
    <%= f.label :password,"パスワード" %><br />
   <div class="col-5 ">
    <%= f.password_field :password, autocomplete: "current-password" %>
   </div>
  </div>

  <div class="form-group row mt-4">
   <div class="col-2 offset-5 mt-2 offset-2">
    <%= f.submit "ログイン" , class: "btn btn-primary w-100" %>
   </div>
  </div>
<% end %>

 <h11 class="offset-2 mb-3 title-text">会員登録がお済でない方</h11>
  <div class="offset-3 mb-4 mt-3">
    <%= link_to " こちら", new_customer_registration_path%>からログインしてください。
  </div>

  </div>
 </div>
</div>
