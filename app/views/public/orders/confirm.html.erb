<div class="container">
   <div class="row">
     <h2 class="col-2">注文情報確認</h2>
    </div>
    <div class="row">
     <div class="col-12 mx-auto">
      <table class="table table-hover">
       <thead>
        <tr class="table-active">
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
        </tr>
       </thead>
       <tbody>
        <% @cart_items.each do |cart_item| %>
         <tr>
          <td>
           <%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
           <%= cart_item.item.name %>
          </td>
          <td><%= number_to_currency(cart_item.item.taxin_price, :format => "%n%u", :unit => "円", :precision => 0) %></td>
          <td>
						<%= cart_item.amount %>
          </td>
          <td><%= number_to_currency(cart_item.sub_total,:format => "%n%u", :unit => "円", :precision => 0) %></td>
         </tr>
        <% end %>
       </tbody>
     </table>
     <table class="table table-hover">
      <tr>
       <td>送料</td>
       <td><%= number_to_currency(800, :format => "%n%u", :unit => "円", :precision => 0) %></td>
      </tr>
      <tr>
       <td>商品合計</td>
       <td><%= number_to_currency(@total.round.to_s(:delimited),:format => "%n%u", :unit => "円", :precision => 0)%></td>
      </tr>
      <tr>
        <td>請求金額</td>
        <td><%= number_to_currency(@total.round.to_s(:delimited), :format => "%n%u", :unit => "円", :precision => 0) %></td>
      </tr>
     </table>
    </div>
   </div>
   <div class="row">
     <p>支払い方法</p>
     <%= @order.payment_method %>
   </div>
   <div class="ml-5">
     <p>お届け先</p>
     〒<%= @order.postal_code %>　<%= @order.address %></br>
			<%= @order.name %>
  </div>
