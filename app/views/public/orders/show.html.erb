<div class="container">
  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="text title-sub-text">
        注文履歴詳細
      </h3>
    </div>
  </div>
  <div class="row mt-4">
    <div class="offset-1 col-4">
      <div class="row mt-3">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="table-active text">注文日</td>
              <td class="light-text"><%= @order.created_at.strftime('%Y年/%m月/%d日') %></td>
            </tr>
            <tr>
              <td class="table-active text">配送先</td>
              <td class="light-text">
                〒<%= @order.postal_code %><%= @order.address %><br>
                <%= @order.name %> 様
              </td>
            </tr>
            <tr>
              <td class="table-active text">支払い方法</td>
              <td class="light-text"><%= @order.payment_method %></td>
            </tr>
            <tr>
              <td class="table-active text">ステータス</td>
              <td class="light-text"><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="offset-1 col-4">

      <div class="row">
        <p>請求情報</p>
      </div>
      <div class="row">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="table-active text">商品合計</td>
              <td class="light-text">
                <%=  number_to_currency(@total, :format => "%n%u", :unit => "円", :precision => 0) %>
              </td>
            </tr>
            <tr>
              <td class="table-active text">配送料</td>
              <td class="light-text"><%= 800 %></td>
            </tr>
            <tr>
              <td class="table-active text">ご請求額</td>
              <td class="light-text"><%= number_to_currency(@order.total_payment, :format => "%n%u", :unit => "円", :precision => 0) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="offset-1">
      <p class="px-3 text text-size">注文内容</p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-9">

      <table class="table table-bordered">
        <thead>
          <tr class="table-active text">
            <th>商品</th>
            <th>単価(税込み)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr class="light-text">
            <td><%= order_detail.item.name %></td>
            <td><%= number_to_currency(order_detail.item.taxin_price, :format => "%n%u", :unit => "円", :precision => 0) %></td>
            <td><%= order_detail.amount %></td>
            <td>
             <%= number_to_currency(order_detail.sub_total, :format => "%n%u", :unit => "円", :precision => 0) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
